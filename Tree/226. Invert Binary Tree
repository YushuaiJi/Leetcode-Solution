/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    public TreeNode invertTree(TreeNode root) {
        reverse(root);
        return root;
    }

    private void reverse(TreeNode root){
        if(root ==null) return;
        reverse(root.left);
        reverse(root.right);
        TreeNode temp = root.right;
        root.right = root.left;
        root.left = temp;
    }
}
